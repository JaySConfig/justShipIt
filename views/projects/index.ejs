<!DOCTYPE html>
<html>
<head>
    <title>Just Ship It | All Projects</title>
    <link href="/css/output.css" rel="stylesheet">
    <!-- Fallback styles in case Tailwind isn't loading -->
    <style>
        .fallback-card {
            border: 1px solid #ccc;
            margin: 10px;
            padding: 20px;
        }
    </style>
</head>
<body>

    <script>
        console.log('Page loaded!');
        console.log('Number of projects:');
        console.log('Projects data:');
        
        // Log when page is fully loaded
        window.addEventListener('load', () => {
            console.log('Window fully loaded');
        });
    </script>

    <h1 style="text-align: center; margin: 20px 0;">Projects</h1>

    <div style="max-width: 1200px; margin: 0 auto; padding: 20px;">
        <% if (projects && projects.length > 0) { %>
            <% projects.forEach(project => { %>
                <div class="fallback-card">
                    <h2 style="color: #333;"><%= project.title %></h2>
                    <p><%= project.description %></p>
                    <div>
                        <strong>Tech Stack:</strong>
                        <% project.techStack.forEach(tech => { %>
                            <span style="background: #e2e8f0; padding: 2px 6px; margin: 2px; border-radius: 4px;">
                                <%= tech %>
                            </span>
                        <% }) %>
                    </div>
                    <div style="margin-top: 10px;">
                        <% if (project.liveUrl) { %>
                            <a href="<%= project.liveUrl %>" target="_blank" style="color: blue; margin-right: 10px;">Live Demo</a>
                        <% } %>
                        <% if (project.githubUrl) { %>
                            <a href="<%= project.githubUrl %>" target="_blank" style="color: blue;">GitHub</a>
                        <% } %>
                    </div>
                    <div style="margin-top: 10px; color: #666;">
                        Built in: <%= project.devDuration %>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p style="text-align: center;">No projects yet. Be the first to add one!</p>
        <% } %>
    </div>

    <div style="position: fixed; bottom: 20px; right: 20px;">
        <a href="/projects/new" 
           style="background: #3b82f6; color: white; padding: 10px 20px; border-radius: 20px; text-decoration: none;">
            Add Project
        </a>
    </div>
</body>
</html>